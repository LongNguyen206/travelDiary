{{#each trips}}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{country}}</span>
                        <p>by {{user.name}}</p>
                        <p>{{description}}</p>
                    </div>
                    <div class="card-action">
                        <a href="#">More details</a>
                        <a href="#">User Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{else}}
    <h1>No Trips Posted!</h1>
{{/each}}