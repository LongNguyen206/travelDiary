<h1>Sign Up</h1>
<!-- loop through the errors and display the validation message -->
{{#each errors}}
  <h4>{{text}}</h4>
{{else}}

{{/each}}
<div class="row">
  <form class="col s12" action="/users/register" method="post">
    <div class="row">
      <div class="input-field col s6">
        <input id="name" type="text" class="validate" name="name" value="{{name}}" required>
        <label for="first_name">Name</label>
      </div>
      {{!-- <div class="input-field col s6">
        <input id="last_name" type="text" class="validate">
        <label for="last_name">Last Name</label>
      </div> --}}
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="email" type="email" class="validate" name="email" value="{{email}}" required>
        <label for="email">Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input placeholder="Minimum 6 characters" id="Password" type="password" class="validate" name="password" minlength="5" value="{{password}}" required>
        <label for="password">Password</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="Password2" type="password" class="validate" name="password2" minlength="5" value="{{password2}}" required>
        <label for="password2">Confirm Password</label> 
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        </button>
      </div>
    </div>
  </form>
</div>