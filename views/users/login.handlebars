<h1>Log in</h1>
<!-- loop through the errors and display the validation message -->
{{#each errors}}
  <h4>{{text}}</h4>
{{else}}

{{/each}}

<div class="row">
  <form class="col s12" action="/users/login" method="post">
    <div class="row">
      <div class="input-field col s12">
        <input id="email" type="email" class="validate" name="email" value="{{email}}" required>
        <label for="email">Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input placeholder="Minimum 6 characters" id="Password" type="password" class="validate" name="password" minlength="5" value="{{password}}" required>
        <label for="password">Password</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        </button>
      </div>
    </div>
  </form>
</div>